# ~/.config/dunst/dunstrc

[global]
### Display ###
monitor = 0
follow = mouse

origin = top-right
offset = (18, 48)

width = 360
height = (0, 220)
notification_limit = 5

indicate_hidden = yes
shrink = no
transparency = 12

separator_height = 0
padding = 12
horizontal_padding = 14
text_icon_padding = 12
frame_width = 1
frame_color = "#5c5c5c"
separator_color = auto
gap_size = 10

sort = yes
idle_threshold = 0

### Text ###
font = JetBrainsMono Nerd Font 10
line_height = 2
markup = full

# NOTE: no stray '%' characters; this avoids "format_string %' is unknown."
format = "<span alpha='85%'>%a</span>\n<b>%s</b>\n%b"

alignment = left
vertical_alignment = center
show_age_threshold = -1
word_wrap = yes
ellipsize = end
ignore_newline = no

stack_duplicates = true
hide_duplicate_count = false
show_indicators = no

### Icons ###
icon_position = left
min_icon_size = 32
max_icon_size = 56
icon_corner_radius = 10

# If you have a theme installed, prefer theme icons:
enable_recursive_icon_lookup = true

### History ###
sticky_history = no
history_length = 20

### Progress bar ###
progress_bar = true
progress_bar_height = 8
progress_bar_frame_width = 0
progress_bar_min_width = 140
progress_bar_max_width = 280
progress_bar_corner_radius = 4

### Shortcuts ###
close_all = ctrl+space
history = mod1+grave

### Misc ###
dmenu = /usr/bin/dmenu -p dunst:
browser = /usr/bin/firefox -new-tab
always_run_script = true
title = Dunst
class = Dunst

corner_radius = 12
ignore_dbusclose = false
force_xinerama = false

### Mouse ###
mouse_left_click = close_current
mouse_middle_click = do_action, close_current
mouse_right_click = close_all


[experimental]
per_monitor_dpi = false


[urgency_low]
background = "#111111"
